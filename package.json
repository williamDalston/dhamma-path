{
  "name": "the-dhamma-path",
  "version": "1.0.0",
  "description": "A comprehensive morning routine platform combining meditation, journaling, exercise, and confidence practice with Buddhist wisdom",
  "main": "index.html",
  "scripts": {
    "lint": "npm run lint:js && npm run lint:css && npm run lint:html",
    "lint:js": "eslint *.js --ext .js",
    "lint:css": "stylelint '**/*.css' || true",
    "lint:html": "htmlhint '**/*.html'",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint:fix": "eslint *.js --ext .js --fix && stylelint '**/*.css' --fix && htmlhint '**/*.html'",
    "check": "npm run format:check && npm run lint"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.1.1",
    "htmlhint": "^1.1.4",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "stylelint": "^16.2.1",
    "stylelint-config-standard": "^36.0.1"
  },
  "keywords": [
    "meditation",
    "mindfulness",
    "morning-routine",
    "buddhism",
    "journaling",
    "exercise",
    "self-help"
  ],
  "author": "Will Alston",
  "license": "MIT"
}
